<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_layout"
    tools:context="com.notifications.youtube.azem.calculator.CalculatorActivity">

    <fragment
        android:id="@+id/frag_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.notifications.youtube.azem.calculator.DisplayFragment"
        tools:layout="@layout/fragment_display"/>

    <fragment
        android:id="@+id/frag_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.notifications.youtube.azem.calculator.InputFragment"
        tools:layout="@layout/fragment_input"
        android:layout_below="@id/frag_display"/>


</RelativeLayout>
